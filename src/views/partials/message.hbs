{{#if success}}
<div class="alert alert-success alert-dismissible fade show m-1 text-center" role="alert">
    {{success}}
    <button type="button" class="btn-close mt-0" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
{{#if warning}}
<div class="alert alert-warning alert-dismissible fade show m-1 text-center" role="alert">
    {{warning}}
    <button type="button" class="btn-close mt-0" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
{{#if danger}}
<div class="alert alert-danger alert-dismissible fade show m-1 text-center" role="alert">
    {{danger}}
    <button type="button" class="btn-close mt-0" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}