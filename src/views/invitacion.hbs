<script>
    var btn = document.getElementById('verificarBT');

    function verificar() {
        var code = document.getElementById('code');
        console.log(code.value.trim());
        //code.disabled = true;
        btn.disabled = true;
        btn.innerHTML = `
            <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
            <span role="status">Validando...</span>
        `;
    }

    function validar() {
        var code = document.getElementById('code');
        var value = code.value.toUpperCase().trim();
        var errorMsg = '';

        if (value.length !== 4) {
            errorMsg = 'El código debe tener 4 caracteres.';
        } else if (!/^[A-Z]{2}[0-9]{2}$/.test(value)) {
            if (/[^A-Z0-9]/.test(value)) {
                errorMsg = 'El código solo puede contener letras mayúsculas y números.';
            } else {
                errorMsg = 'El código debe ser 2 letras y 2 números.';
            }
        }

        var feedback = document.getElementById('feedback');
        if (errorMsg !== '') {
            code.classList.remove('is-valid');
            code.classList.add('is-invalid');
            feedback.innerText = errorMsg;
            feedback.style.display = 'block';
            btn.disabled = true;
            btn.className = 'btn btn-danger btn-sm';
            btn.innerHTML = 'Revisa';

        } else {
            code.classList.remove('is-invalid');
            code.classList.add('is-valid');
            feedback.style.display = 'none';
            btn.disabled = false;
            btn.className = 'btn btn-success btn-sm';
            btn.innerHTML = 'Verificar';
        }
        code.value = value;
    }

    function validarFormulario() {
        validar();
        var code = document.getElementById('code');
        return code.classList.contains('is-valid');
    }
</script>